@page "/account/login"
@model LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<h1>@ViewData["Title"]</h1>


@if (!User.Identity.IsAuthenticated)
{
    <div class="container boder" style="padding:20px">
        <form method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row" style="margin:10px">
                <label asp-for="Input.UserName" class="col-sm-2 col-form-label"></label>
                <input asp-for="Input.UserName" class="form-control" aria-required="true" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group row" style="margin:10px">
                <label asp-for="Input.Password" class="col-sm-2 col-form-label"></label>
                <input asp-for="Input.Password" class="form-control" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div style="margin:10px">
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Đăng nhập</button>
            </div>
        </form>
    </div>
}
else
{
    <div>Bạn đã đăng nhập</div>
    <div>@User.Identity.Name</div>
}



