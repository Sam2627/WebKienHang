@if(User.Identity.IsAuthenticated)
{
    <form method="get" class="form-inline" asp-page="/account/logout">
        Welcome @User.Identity.Name
        <button type="submit" class="ml-2 btn btn-link">Đăng xuất</button>
    </form>
}
else
{
    <a class="btn btn-link" asp-page="Identity/Account/Login">Đăng nhập</a>
}